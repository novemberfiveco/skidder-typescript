{
  "name": "@novemberfiveco/skidder-typescript",
  "version": "1.0.2",
  "description": "November Five's logging library. Skidder will drag your logs where they need to go.",
  "repository": {
    "type": "git",
    "url": "git://github.com/novemberfiveco/skidder-react.git"
  },
  "main": "dist/cjs/index.js",
  "type": "module",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "author": "Jens Reynders <jens.reynders@novemberfive.co>",
  "license": "MIT",
  "scripts": {
    "start": "rollup -c -w",
    "build": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "commit": "git add . && npx git-cz --disable-emoji",
    "prepack": "npm run build && npm run build:types",
    "release": "release-it"
  },
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "release-it": "^15.9.3",
    "rollup": "^2.52.2",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.3.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "autoGenerate": true,
      "tokenRef": "GITHUB_TOKEN"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance improvements"
            }
          ]
        },
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    }
  }
}
